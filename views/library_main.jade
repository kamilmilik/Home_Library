doctype html
html(lang='en')
  head
    title Library 
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    style.
      /*.headTable{
        text-align: center;
      }*/
      /* tabela dla Library */
      table, th, td {
       border: 1px solid black;
       border-collapse: collapse;
       padding: 15px;
      }
      /* Usunecie domyslnego marginesu i zaaokraglnych bokow */
      .navbar {
      margin-bottom: 0;
      border-radius: 0;
      }
      /* Ustawinie wysokosci gridu */
      .row.content>.website {height: 450px}
      /* Kolory */
      .sidenav {
      padding-top: 20px;
      background-color: #f1f1f1;
      height: 100%;
      }
      /* Stopka */
      footer {
      background-color: #555;
      color: white;
      padding: 15px;
      }
      /* Ustawienia dla maÅ‚ych ekranow */
      @media screen and (max-width: 767px) {
      .sidenav {
      height: auto;
      padding: 15px;
      }
      .row.content {height:auto;}
      }
      /*ustawienia dla napisu na srodku obrazka na samej gorze */
      .centered {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      }
      /* przyciski po najecehaniu i wcisnieciu */
      .navbar-inverse .navbar-nav>li>a:hover{
      color:#000;
      background-color:white;
      }
      /* zmiana przycisku po najechaniu */
      .navbar-inverse .navbar-nav>.open>a:hover{
      color:#000;
      background-color:white;
      }
      /*zmiana aktywnego przycisku */
      .navbar-inverse .navbar-nav>.active>a{
      color: #fff;
      }
      /* zmienia kolor po ponownym wcisnieciu */
      .navbar-inverse .navbar-nav>.active>a:focus{
      color: #fff;
      }
      /*zmiana aktywnego przycisku po najechaniu */
      .navbar-inverse .navbar-nav>.active>a:hover{
      color:#000;
      background-color:white;
      }
      /*formularz dodawania dla add book */
      input[type=text], select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }
      input[type=submit] {
        width: 100%;
        background-color: #000;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      input[type=submit]:hover {
        background-color: #242D3C;
      }
	  

